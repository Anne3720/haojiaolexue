                $("#rightMain").attr('src', '/admin/blank');
            } else {
                $("#rightMain").attr('src', '/procedure/meet_list');
            }

            $.each(res.data, function (k, v) {

                txt = '<div>';
                txt += '    <h3 class="f14"><span class="switchs on cu" title="展开与收缩" onclick="switchs(this)"></span>' + v['title'] + '</h3>';
                txt += '    <ul>';

