/* 获取菜单 */
function menu_list(obj) {
    $(obj).parent().addClass('on').siblings().removeClass('on');
    id = $(obj).attr('data-id');
    $('#zcms').text($(obj).text());

    $.get('/admin/menu/getlist?id=' + id, function (res) {

